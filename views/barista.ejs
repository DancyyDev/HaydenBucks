<!doctype html>
<html>
<head>
    <title>Order Up!</title>
    <script src="https://kit.fontawesome.com/d60e865119.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="style.css">
</head>
<body>
  <section class="containerBarista">
            <h2>Orders!</h2>

            <section>
                <h3><%= user.local.firstName %> <%= user.local.lastName %></h3>
                <h3><%= user.local.email %></h3>
             <a href="/logout"><button>Log-Out</button></a>   
            </section>
            

            <ul class="orderFalse">
              <h3>In Progress</h3>
                <% for(let i=0; i<orders.length; i++) { %>
                <%  if( orders[i].complete == false) {  %>
                  <li id="<%= orders[i]._id%>">
                    <p>Name:</p>
                    <span><%= orders[i].name %></span>
                    <p>Size:</p>
                    <span><%= orders[i].size %></span>
                    <p>Type:</p>
                    <span><%= orders[i].beverage %></span>
                    <p>Note:</p>
                    <span><%= orders[i].note %></span>
                    <p>Complete:</p>
                    <span><%= orders[i].complete %></span><br>
                    <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
                    <span><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                  </li>
                <% } } %>
            </ul> 

            <ul class="orderTrue">
              <h3>Complete</h3>
                  <% for(let i=0; i<orders.length; i++) { %>
                  <% if ( orders[i].complete == true ) {  %>
                    <li id="<%= orders[i]._id%>">
                      <p>Barista:</p>
                      <span><%= user.local.firstName %> <%= user.local.lastName %></span>
                      <p>Name:</p>
                      <span><%= orders[i].name %></span>
                      <p>Size:</p>
                      <span><%= orders[i].size %></span>
                      <p>Type:</p>
                      <span><%= orders[i].beverage %></span>
                      <p>Note:</p>
                      <span><%= orders[i].note %></span>
                      <p>Complete:</p>
                      <span class="<%= orders.complete%>"><%= orders[i].complete %></span><br>
                      <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
                      <span><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                    </li>
                  <% }} %>
            </ul> 
               
  </section>

 
<script src="main.js"></script>

</body>
</html>